{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*.svelte", "src/**/*.ts", "src/**/*.js", "index.d.ts"],
  "exclude": [
    "node_modules/*",
    "dist/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "lib": ["es2022", "DOM"],
    "types": ["svelte", "vite/client"],
	  "importHelpers": true,
    "outDir": "dist",
    "declaration": false,
    "paths": {
      "@src/*": ["./src/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@assets/*": ["./src/assets/*"]
    }
  }
}
